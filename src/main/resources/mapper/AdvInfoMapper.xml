    <result column="ADV_TYPE_ID" property="advTypeId" jdbcType="BIGINT" />
    <result column="NAME" property="name" jdbcType="VARCHAR" />
    <result column="MATERIAL_TYPE" property="materialType" jdbcType="INTEGER" />
    <result column="STATUS" property="status" jdbcType="INTEGER" />
    <result column="START_DATE" property="startDate" jdbcType="DATE" />
    <result column="END_DATE" property="endDate" jdbcType="DATE" />
    <result column="PERIOD_TIME_START" property="periodTimeStart" jdbcType="TIME" />
    <result column="PERIOD_TIME_END" property="periodTimeEnd" jdbcType="TIME" />
    <result column="CHECK_USER" property="checkUser" jdbcType="VARCHAR" />
