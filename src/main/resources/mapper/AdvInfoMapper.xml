    <result column="RESERVED_STRING" property="reservedString" jdbcType="VARCHAR" />
    <result column="RESERVED_INT" property="reservedInt" jdbcType="BIGINT" />
  </resultMap>
  <sql id="columnList" >
    ID, ADV_LOCATION_ID, ADV_TYPE_ID, NAME, MATERIAL_TYPE, STATUS, START_DATE, END_DATE, 
    PERIOD_TIME_START, PERIOD_TIME_END, CHECK_USER, CHECK_NOTE, CHECK_TIME, CREATED_USER, 
    CREATED_TIME, LAST_EDIT_TIME, LAST_EDIT_USER, LAST_EDIT_MODULE, REGION, RESERVED_STRING, 
    RESERVED_INT
  </sql>

  <!--根据广告id查询广告信息-->
  <select id="selectByAdvInfoId" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="columnList" />
    from adv_info
    where ID = #{id}
  </select>

  <!--查询所有广告信息-->
  <select id="">
    select
    <include refid="columnList"/>
    from adv_info
  </select>

  <!--根据广告名称、有效期、状态进行查询-->
  <select id="">
    select
    <include refid="columnList"/>
    from adv_info
    where
    <if test="name != null">name = #{name,jdbcType=VARCHAR}</if>
    and
    <if test="status != null">status = #{status,jdbcType=INTEGER}</if>
    between
    <if test="startDate != null">startDate = #{startDate,jdbcType=DATE}</if>
    and
    <if test="endDate != null">endDate = #{endDate,jdbcType=DATE}</if>
  </select>

  <!--删除广告信息-->
  <delete id="deleteByAdvInfoId" parameterType="java.lang.Long" >
    delete from adv_info
    where ID = #{id}
  </delete>

  <!--创建广告-->
  <insert id="insertAdvInfo" parameterType="com.suma.pojo.AdvInfo" >
    insert into adv_info (
      <include refid="columnList"/>
      )
    values (#{id,jdbcType=BIGINT}, #{advLocationId,jdbcType=BIGINT}, #{advTypeId,jdbcType=BIGINT}, 
      #{name,jdbcType=VARCHAR}, #{materialType,jdbcType=INTEGER}, #{status,jdbcType=INTEGER}, 
      #{startDate,jdbcType=DATE}, #{endDate,jdbcType=DATE}, #{periodTimeStart,jdbcType=TIME}, 
      #{periodTimeEnd,jdbcType=TIME}, #{checkUser,jdbcType=VARCHAR}, #{checkNote,jdbcType=VARCHAR}, 
      #{checkTime,jdbcType=TIMESTAMP}, #{createdUser,jdbcType=VARCHAR}, #{createdTime,jdbcType=TIMESTAMP}, 
      #{lastEditTime,jdbcType=TIMESTAMP}, #{lastEditUser,jdbcType=VARCHAR}, #{lastEditModule,jdbcType=VARCHAR}, 
      #{region,jdbcType=INTEGER}, #{reservedString,jdbcType=VARCHAR}, #{reservedInt,jdbcType=BIGINT}
      )
  </insert>

  <!--更新广告-->
  <update id="updateAdvInfo" parameterType="com.suma.pojo.AdvInfo" >
    update adv_info
    <set >
      <if test="advLocationId != null" > ADV_LOCATION_ID = #{advLocationId,jdbcType=BIGINT}, </if>
      <if test="advTypeId != null" >ADV_TYPE_ID = #{advTypeId,jdbcType=BIGINT},</if>
      <if test="name != null" > NAME = #{name,jdbcType=VARCHAR},</if>
      <if test="materialType != null" >MATERIAL_TYPE = #{materialType,jdbcType=INTEGER},</if>
      <if test="status != null" >STATUS = #{status,jdbcType=INTEGER},</if>
      <if test="startDate != null" >START_DATE = #{startDate,jdbcType=DATE},</if>
      <if test="endDate != null" >END_DATE = #{endDate,jdbcType=DATE},</if>
      <if test="periodTimeStart != null" >PERIOD_TIME_START = #{periodTimeStart,jdbcType=TIME},</if>
      <if test="periodTimeEnd != null" >PERIOD_TIME_END = #{periodTimeEnd,jdbcType=TIME},</if>
      <if test="checkUser != null" >CHECK_USER = #{checkUser,jdbcType=VARCHAR},</if>
      <if test="checkNote != null" >CHECK_NOTE = #{checkNote,jdbcType=VARCHAR},</if>
      <if test="checkTime != null" >CHECK_TIME = #{checkTime,jdbcType=TIMESTAMP},</if>
      <if test="createdUser != null" >CREATED_USER = #{createdUser,jdbcType=VARCHAR},</if>
      <if test="createdTime != null" >CREATED_TIME = #{createdTime,jdbcType=TIMESTAMP},</if>
      <if test="lastEditTime != null" >LAST_EDIT_TIME = #{lastEditTime,jdbcType=TIMESTAMP},</if>
      <if test="lastEditUser != null" >LAST_EDIT_USER = #{lastEditUser,jdbcType=VARCHAR},</if>
      <if test="lastEditModule != null" >LAST_EDIT_MODULE = #{lastEditModule,jdbcType=VARCHAR},</if>
      <if test="region != null" >REGION = #{region,jdbcType=INTEGER},</if>
      <if test="reservedString != null" >RESERVED_STRING = #{reservedString,jdbcType=VARCHAR},</if>
      <if test="reservedInt != null" >RESERVED_INT = #{reservedInt,jdbcType=BIGINT},</if>
    </set>
    where ID = #{id,jdbcType=BIGINT}
  </update>
</mapper>