  <select id="select" resultMap="BaseResultMap" parameterType="java.lang.Long">
    select 
    <include refid="Base_Column_List" />
    from adv_check_detail
    where ADV_INFO_ID = #{advInfoId,jdbcType=BIGINT}
  </select>

